{
    // I want my default to be 4, but JavaScript/JSON to be 2
    "editor.tabSize": 4,
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.tabSize": 2
    },
    "[jsx]": {
        "editor.tabSize": 2
    },
    "[tsx]": {
        "editor.tabSize": 2
    },
    "[html]": {
      "editor.tabSize": 2
  },
    // This one forces the tab to be **space**
    "editor.insertSpaces": true
}